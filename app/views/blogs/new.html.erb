  <div class="container background-blog">
    <div class="vh-100">
      <%= simple_form_for @blog do |f| %>
        <%= f.input :date, as: :date, html5: true, placeholder: 'creation date' %>
        <%= f.input :title, placeholder: 'add a title' %>
        <%= f.input :content, placeholder: 'add your text' %>
        <%= f.submit class: 'btn btn-flat' %>
      <% end %>
    </div>
  </div>
