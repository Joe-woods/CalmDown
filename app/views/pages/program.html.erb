<div class="background-program padding-header-navbar">
  <div class="container">
    <h1>Program</h1>
    <%= link_to kinesthetic_path do %>
      <i class="fa-solid fa-dice-d20"></i>
    <% end %>
  &nbsp&nbsp
    <%= link_to video_path do%>
      <i class="fa-solid fa-clapperboard"></i>
    <% end %>


    <% @event.events_resources.each do |events_resource|%>
      <div>
        <% if events_resource.resource.category == "mixcloud" %>
          <% if events_resource.timing == 60 %>
            <h6>30 minutes before - <%= @event.name %> Day</h6>
          <% elsif events_resource.timing == 1440 %>
            <h6> 3 hours before - <%= @event.name %> Day</h6>
          <% else %>
            <h6> 5 hours before - <%= @event.name %> Day</h6>
          <% end %>
        <% else%>
          <% if events_resource.timing == 60 %>
            <h6>10 minutes before - <%= @event.name %> Day</h6>
          <% elsif events_resource.timing == 1440 %>
            <h6> 1 hour before - <%= @event.name %> Day</h6>
          <% else %>
            <h6> 1 day before - <%= @event.name %> Day</h6>
          <% end %>
        <% end %>

        <p><%= events_resource.resource.description %></p>
        <% if events_resource.resource.category == "mixcloud" %>
          <iframe width="100%" height="60" src="<%= events_resource.resource.content %>" frameborder="0" ></iframe>
        <% else %>
          <iframe width="350" height="175" src="<%= events_resource.resource.content %>" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        <% end %>
      <% end %>
      </div>
  </div>
</div>
