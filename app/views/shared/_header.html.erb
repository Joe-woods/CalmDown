<header class="header static-top d-flex" data-controller="header">
  <div class="container-fluid">
    <%= link_to "CalmDown", root_path, class: "header-h1" %>
  </div>
  <div>
    <% if user_signed_in? %>
      <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "logout-link" do %>
        <i class="fa-solid fa-arrow-right-from-bracket logout-icon"></i>
      <% end %>
    <% else %>
      <%= link_to destroy_user_session_path, data: {turbo_method: :delete}, class: "logout-link-invisible" do %>
        <i class="fa-solid fa-arrow-right-from-bracket logout-icon-invisible"></i>
      <% end %>
    <% end %>
  </div>
</header>
