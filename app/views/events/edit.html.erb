<div class="background-event padding-header-navbar">
  <%= simple_form_for (@event), html: { class: "container mt-5"} do |f| %>
  <h2>Update your event: </h2>
    <%= f.input :start_time, as: :datetime, html5: true %>
    <%= f.input :end_time, as: :datetime, html5: true %>
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.submit "Update!", class: "btn btn-primary" %>
  <% end %>
</div>
