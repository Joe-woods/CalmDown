<div class="background-calendar blur padding-header-navbar">
  <div class='vh-100'>
    <div class="simple-calendar mx-3">
      <h2 class='mb-3 pb-3'><b> Schedule your event to get your personalized program</b></h2>

      <div class="calendar-container">
        <div class="d-flex align-items-center justify-content-around">
          <div class="calendar-heading my-2 d-flex justify-content-center">
            <%= link_to t('simple_calendar.previous', default: '<'), calendar.url_for_previous_view, class: 'btn btn-primary' %>
            <span class="calendar-title btn btn-outline-dark btn btn-light"><%= t('date.month_names')[start_date.month] %> <%= start_date.year %></span>
            <%= link_to t('simple_calendar.next', default: '>'), calendar.url_for_next_view, class: 'btn btn-primary' %>
          </div>
        </div>

        <table class="table table-striped">
          <thead>
            <tr>
              <% date_range.slice(0, 7).each do |day| %>
                <th><%= t('date.abbr_day_names')[day.wday] %></th>
              <% end %>
            </tr>
          </thead>

          <tbody>
            <% date_range.each_slice(7) do |dates| %>
              <tr>
                <% dates.each do |date| %>
                  <%= content_tag :td, class: calendar.td_classes_for(date) do %>
                      <% passed_block.call date.day, sorted_events.fetch(date, []) %>
                  <% end %>
                <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
